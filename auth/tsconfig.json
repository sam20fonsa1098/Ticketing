{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@infra/*": ["infra/*"],
      "@config/*": ["config/*"],
      "@dtos/*": ["dtos/*"],
      "@providers/*": ["providers/*"],
      "@repositories/*": ["repositories/*"],
      "@services/*": ["services/*"],
    },
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  }
}
