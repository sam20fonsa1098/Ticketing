pipeline {
  agent any

  stages {
    stage('Docker Build Image') {
      steps {
        script {
          sh "cd auth"
          sh "docker build -t sam20fonsa1098/ticketing-auth ."
        }
      }
    }

    stage('Docker Push Image') {
      steps {
        script {
          sh "cd auth"
          sh "docker push sam20fonsa1098/ticketing-auth"
        }
      }
    }
  }
}